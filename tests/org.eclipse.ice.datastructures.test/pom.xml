							<version>3.7.2</version>
						</dependency>
						<dependency>
							<type>p2-installable-unit</type>
							<artifactId>org.eclipse.equinox.util</artifactId>
							<version>1.0.3</version>
						</dependency>
						<dependency>
							<type>p2-installable-unit</type>
							<artifactId>org.eclipse.equinox.app</artifactId>
							<version>1.3.1</version>
						</dependency>
						<dependency>
