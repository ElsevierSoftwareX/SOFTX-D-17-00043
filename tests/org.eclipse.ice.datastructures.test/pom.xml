				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
				<appArgLine>-DREFRESH_BUNDLES=FALSE</appArgLine>
					<!-- Bundle start levels for database tests -->
					<bundleStartLevel>
