							<version>3.4.100</version>
						</dependency>
						<dependency>
							<type>p2-installable-unit</type>
							<artifactId>org.eclipse.core.jobs</artifactId>
							<version>3.5.100</version>
						</dependency>
						<dependency>
							<type>p2-installable-unit</type>
							<artifactId>org.eclipse.ice.database.test</artifactId>
							<version>2.0.0</version>
						</dependency>
						<dependency>
							<type>p2-installable-unit</type>
							<artifactId>org.eclipse.ice.datastructures</artifactId>
							<version>2.0.0</version>
