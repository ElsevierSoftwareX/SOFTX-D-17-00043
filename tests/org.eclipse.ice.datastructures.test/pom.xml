							<level>3</level>
							<autoStart>true</autoStart>
						</bundle>	
						<bundle>
							<id>org.eclipse.osgi</id>
							<level>-1</level>
							<autoStart>true</autoStart>
						</bundle>					
						<bundle>
							<id>org.eclipse.persistence.antlr</id>
							<level>3</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.persistence.asm</id>
							<level>3</level>
							<autoStart>true</autoStart>
