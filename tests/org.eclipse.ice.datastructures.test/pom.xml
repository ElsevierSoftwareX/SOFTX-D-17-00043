							<id>org.eclipse.update.configurator</id>
							<level>3</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.ice.datastructures</id>
							<level>3</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.database.test</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
